{% extends 'base.html.twig' %}


{% block title %}Log in!{% endblock %}

{% block body %}


    <div class="container h-100" >
        <div class="row align-items-center h-100">
            <div class="col-6 mx-auto" align="center">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="col">
                <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>

                <label for="inputPseudo">Pseudo ou adresse mail</label>
                <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control"
                       required
                       autofocus style="width: 400px">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" style="width: 400px" name="password" id="inputPassword" class="form-control"
                       required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                    </label>
                </div>
            </div>

            <button style="margin-top: 20px" class="btn btn-lg btn-primary" type="submit">Se connecter</button>



        </form>



    </div>
    </div>
    </div>
    </div>
    <div>
        <img src=build/images/Untitled.png id=fondecran class=fondecran alt=/>
    </div>
    {% block footer %}{% endblock %}
{% endblock %}
