{% extends 'base.html.twig' %}

{% block title %}Bonjour,{{ app.user.nom}} {% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center ">
        <div class="card p-4 mt-2 ">
            <div class="first">
                <h1 class="heading">{{ app.user.nom }} {{ app.user.prenom }}</h1>
                <div class="time d-flex flex-row align-items-center justify-content-between mt-3">
                    <div class="d-flex align-items-center"><span class="hour ml-1">Pseudo : {{ app.user.pseudo }}</span> </div>
                </div>
            </div>
            <div class="second d-flex flex-row mt-2">
                {% if app.user.imageFileName is not null %}
                    <div class="image mr-3"> <img src="{{ asset('build/uploads/imageUser/' ~ app.user.imageFileName) }}" width="150rem" height="150rem" class="rounded-circle img-thumbnail"></div>

                {% else %}
                    <img src="{{ asset ('build/images/Avatar-default.png') }}" width="150rem" height="150rem"
                         class="rounded-circle img-thumbnail">
                {% endif %}
                <div class="">
                    {% if app.user.mail is not null %}
                        Mail :
                        <a href="#" class="d-block"> {{ app.user.mail }}</a>
                    {% endif %}
                    {% if app.user.telephone is not null %}
                        Numéro de Téléphone :
                        <a href="#" class="d-block"> {{ app.user.telephone }}</a>
                    {% endif %}
                        Campus :
                    <a href="#" class="d-block"> {{ app.user.site.nom}} </a>
                </div>
            </div>
            <hr class="line-color">
            {% if app.user.id is not null %}
            <div class="third mt-4"> <a class="btn btn-info btn-block" href="{{ url('participant_update') }}"> Modifier profil</a>
            </div>
            {% endif %}

        </div>
    </div>
    </div>
{% endblock %}