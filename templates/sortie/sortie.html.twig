<script>
    //defini le path avec une id zero
    const URL = "{{ path('api_lieu_api', {id:0}) }}";
    // récupère le lieu
    let lieu = document.getElementById('sortie_lieu');
    let ville = document.getElementById('ville');
    let cp = document.getElementById('cp');
    let rue = document.getElementById('rue');
    let latitude = document.getElementById('latitude');
    let longitude = document.getElementById('longitude');
    lieu.addEventListener('change', function() {
        //récupère l'id du lieu
        let index = lieu.selectedIndex;

        //remplace le 0 de l'url par l'index récupéré
        let url = URL.replace('0', index);

        $.ajax ({
        url: url,
        method : "GET",
        dataType : "json",
        })

        .done(function(response){
            console.log(response);
            let data = JSON.stringify(response);
            $ ("div#detail").append(data);
        })
        .fail(function(error) {
            alert("La requête s'est terminée en échec. Infos : " + JSON.stringify(error));
        })



    });
</script>

